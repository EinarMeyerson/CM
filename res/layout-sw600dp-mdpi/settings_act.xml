<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_act"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#33000000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iconoCMsettings"
            android:layout_width="@dimen/iconos"
            android:layout_height="@dimen/iconos"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/Transparent"
            android:clickable="false"
            android:paddingBottom="4dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="4dp"
            android:src="@drawable/icono_cm" />

        <TextView
            android:id="@+id/txtTitleSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="@dimen/titulo_footer" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="25dp"
        android:paddingTop="20dp"
        android:text="Elige un tema para la aplicaciÃ³n"
        android:textColor="@color/white"
        android:textSize="@dimen/textdialog" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pagerSettings"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <ImageView
            android:id="@+id/blue_theme_button"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/back_blur_blue_ed" />

        <ImageView
            android:id="@+id/dark_red_theme_button"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/back_black_magenta" />
    </LinearLayout>

</LinearLayout>